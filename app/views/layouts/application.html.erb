<!DOCTYPE html>
<html>
<head>
  <title>Blogtober</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


      <section class="top-bar-section">
        <!-- Right Nav Section -->
        <ul class="right">
          <% if logged_in? %>
            <li><%= link_to "Logged in as #{current_user}", "#" %></li>
            <li><%= link_to "Logout", login_path, :method => :delete %></li>
          <% else %>
            <li><%= link_to "Login", new_logins_path %></li>
          <% end %>
        </ul>

        <!-- Left Nav Section -->
        <ul class="left">
        </ul>
      </section>
    </nav>
    <%= display_alert(:notice) %>
    <%= display_alert(:alert) %>
    <%= yield %>
    <%= javascript_include_tag "application" %>
</body>
</html>
